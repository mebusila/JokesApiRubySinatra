      #container
        #jokeswrapper
        #loader{ :style => "display:none;" }
          %center
            %img{ :src => 'images/loader.gif'}
        #showmore Show more
      %script{:type => 'text/x-jquery-tmpl', :id => 'jokeTmpl'}
        %ul{:class => 'joke', :data => '${_id}'}
          %ul.content
            {{tmpl(content) "#jokeContentTmpl"}}
      %script{:type => 'text/x-jquery-tmpl', :id => 'jokeContentTmpl'}
        %li ${}