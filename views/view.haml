!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Subsemnatul Bula
    %meta{:name => "description", :content => "Bancuri, Glume ... "}
    %meta{:name => "author", :content => "Serban Carlogea"}
    :plain
      <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
    %meta{:name => 'viewport', :content=>'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}
    %meta{:property => 'og:title', :content =>'Subsemnatul, Bula, says ...'}
    %meta{:property => 'og:type', :content =>'article'}
    %meta{:property => 'og:description', :content =>"#{content}"}
    %meta{:property => 'og:url', :content =>"/joke/#{joke._id}"}

    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    %script{:src => '/js/ga.js', :type => 'text/javascript', :charset => 'utf-8' }
    %script{:src => '/js/jquery.min.js', :type => 'text/javascript', :charset => 'utf-8' }
    %script{:src => '/js/jquery.tmpl.js', :type => 'text/javascript', :charset => 'utf-8' }
    %script{:src => '/js/main.js', :type => 'text/javascript', :charset => 'utf-8' }
    %link{:href => '/css/reset-min.css', :rel=>'stylesheet'}
    %link{:href => '/css/styles.css', :rel => 'stylesheet' }
    %body
      #header_container.shadow
        #header
          %a{:href => '/'}
            %img{:src=>'/images/home-icon.png'}
            %h1 Subsemnatul Bula
      #container
        #jokewrapper
          %ul.joke{:data => joke._id}
            %ul.content
              - joke.content.each do |line|
                #{line}
                %br
